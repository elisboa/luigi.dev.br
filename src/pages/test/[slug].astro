---
import { getCollection } from 'astro:content';
import TestContentLayout from '../../layouts/TestContentLayout.astro';

export async function getStaticPaths() {
    const testEntries = await getCollection('test');
    return testEntries.map(entry => ( { 
        params: { slug: entry.slug }, props: { entry },
    } ));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<TestContentLayout nome={entry.data.nome} lista={entry.data.lista} data={entry.data.data}>
    <Content/>
</TestContentLayout>